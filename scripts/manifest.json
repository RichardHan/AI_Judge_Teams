{
  "manifest_version": 3,
  "name": "AI Hackathon Judge",
  "version": "1.0",
  "description": "自動捕獲 Teams 會議並進行 AI 分析評分",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "tabCapture",
    "desktopCapture",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.teams.microsoft.com/*",
    "*://*.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.teams.microsoft.com/*"],
      "js": ["content.js"]
    }
  ]
}
{
  "manifest_version": 3,
  "name": "Teams Meeting Recording & Transcription Assistant",
  "version": "1.2",
  "description": "Automatically record Teams meetings and segment them into text transcripts.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; style-src 'self' 'unsafe-inline';"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "tabCapture",
    "activeTab",
    "tabs",
    "scripting",
    "downloads",
    "offscreen"
  ],
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://*.teams.microsoft.com/*",
    "*://*.openai.com/*",
    "*://api.rdsec.trendmicro.com/prod/aiendpoint/v1/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.teams.microsoft.com/*"],
      "js": ["scripts/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles/*.css",
        "scripts/*.js",
        "history.html",
        "offscreen.html"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}